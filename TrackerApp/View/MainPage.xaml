<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackerApp.View.MainPage"
             xmlns:viewmodel="clr-namespace:TrackerApp.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             Title="MainPage"
             xmlns:controls="clr-namespace:TrackerApp.Controls">
    <VerticalStackLayout>
        <controls:CustomMapControl InitialPosition="{Binding InitialPin}"
                                   PinList="{Binding MapPinsList}"
                                   HeightRequest="400"
                                   IsShowingUser="True"
                                   IsTrafficEnabled="True" />
    </VerticalStackLayout>
</ContentPage>
